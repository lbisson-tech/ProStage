<!DOCTYPE html>
<html>
    <body>
    {% block stylesheets %}<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">{% endblock %}
        
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-dark bg-dark">
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="navbar-nav">
                                {% block header %}
                                {% endblock %}
                            </ul>
                        </div>

                    </nav>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    {% block contenu %}
                    <h3>
                       {% block titreContenu %}{% endblock %}
                    </h3>                    

                    <table class="table">
                        <thead>
                            <tr>
                                {% block titresTableau %}
                                <th>
                                    Numero du stage
                                </th>
                                <th>
                                    Titre du stage
                                </th>
                                <th>
                                    Formations concernées
                                </th>
                                <th>
                                    Détails
                                </th>
                                {% endblock %}
                            </tr>
                        </thead>
                        <tbody>
                            {% block contenuTableau %}                           
                            <tr>
                                <td>
                                    1
                                </td>
                                <td>
                                    Analyste Dassault
                                </td>
                                <td>
                                    DUT Info, LP Prog
                                </td>
                                <td>
                                    <a href="{{path('prostage_ressource', {idStage:1})}}">Voir plus</a>
                                </td>
                            </tr>
                            {% endblock %}
                        </tbody>
                    </table>
                    {% endblock %}
                </div>
            </div>

            <!-- FOOTER DE TOUTES LES PAGES -->
            <footer class="page-footer fixed-bottom bg-dark">
                <div class="row">
                    <div class="col-md-4 text-center" style="color: gray;">
                        <p>
                            Crée par Lucas Bisson
                        </p>
                        </div>

                        <div class="col-md-4 text-center" style="color: gray;">
                            <p>
                                Projet ProStage dans le cadre du S3
                            </p>
                        </div>
                        
                        <div class="col-md-4" style="text-align: right; padding-right: 55px">
                            <img alt="Bootstrap Image Preview" src="https://www.iutbayonne.univ-pau.fr/sites/default/files/logos/logo%20iut%202018%20h.jpg" width=175 height=75 />
                        </div>
                    </div>
                </div>
            </footer>
        </div>

        <!-- BLOC JAVASCRIPT UTILISE PAR BOOTSTRAP -->
        {% block javascripts %}<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>{% endblock %}
    </body>
</html>